<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" <%="checked" if @task.completed %>>
<p><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
<br>
<%= link_to "Back to tasks", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
